  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.18.11",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.23",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.37.0",
    "eslint-plugin-vue": "~10.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "npm-run-all2": "^8.0.4",
    "only-allow": "^1.2.1",
    "prettier": "3.6.2",
    "typescript": "~5.9.0",
    "vite": "^7.1.11",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1"
  },
  "homepage": "https://github.com/wtricks/piko",
  "bugs": {
    "url": "https://github.com/wtricks/piko/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wtricks/piko.git"
  },
  "files": [
    "dist",
    "src",
    "public",
    "package.json",
    "README.md"
  ],
  "lint-staged": {
    "*.{ts,js,vue,json,css,md}": [
      "prettier --write"
    ]
  }
}
