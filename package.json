{
  "name": "piko",
  "version": "0.0.0",
  "displayName": "Piko",
  "type": "module",
  "description": "A powerful no-code/low-code platform to design, develop, and deploy cross-platform apps with React Native. Drag & drop UI components, integrate APIs, and publish instantly â€” all without writing a single line of code.",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix --cache",
